@model CreateFolderViewModel

@{
    var errorExitst = ViewData.ContainsKey("error");
    ViewData.TryGetValue("error", out var errorMessage);
}

<div class="container">
    <form method="post" asp-action="CreateFolder" asp-antiforgery="true">
        <input type="hidden" name="Path" value="@Model.Path" />
        <div class="form-group">
            <label for="folderName">Имя папки</label>
            <input type="text" class="form-control @{ if (errorExitst) { <text>is-invalid</text> } }" id="folderName" placeholder="Введите имя папки" asp-for="FolderName">
            @if (errorExitst)
            {
                <div class="invalid-feedback">
                    @errorMessage
                </div>
            }
        </div>
        <button type="submit" class="btn btn-primary">Создать</button>
    </form>
</div>