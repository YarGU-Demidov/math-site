@model PostViewModel

<div class="form-group">
    @Html.LabelFor(m => m.SeoTitle, "SEO Заголовок")
    @Html.TextBoxFor(m => m.SeoTitle, new { @class = "form-control" })
</div>
<div class="form-group">
    @Html.LabelFor(m => m.SeoDescription, "SEO Описание страницы")
    @Html.TextAreaFor(m => m.SeoDescription, new { @class = "form-control" })
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Url, "URL")
    @Html.TextBoxFor(m => m.Url, new { required = "required", @class = "form-control" })
</div>