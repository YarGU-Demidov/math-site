@model PostViewModel

<div class="form-group">
    @Html.LabelFor(m => m.Title, "Заголовок")
    @Html.TextBoxFor(m => m.Title, new { required = "required", @class = "form-control" })
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Excerpt, "Кратко")
    @Html.TextAreaFor(m => m.Excerpt, new { id = "excerpt-textarea", required = "required", @class = "form-control" })
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Content, "Контент")
    @Html.TextAreaFor(m => m.Content, new { id = "content-textarea", required = "required", @class = "form-control" })
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Published, "Опубликовать?")
    <div class="form-check">
        <input type="radio" name="Published" id="published-true" value="true" asp-for="Published" class="form-check-input" />
        <label asp-for="Deleted" for="published-true" class="form-check-label">Да</label>
    </div>
    <div class="form-check">
        <input type="radio" name="Published" id="published-false" value="false" asp-for="Published" class="form-check-input" />
        <label asp-for="Deleted" for="published-false" class="form-check-label">Нет</label>
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Authors, "Автор")
    <select class="form-control" asp-for="@Model.AuthorId" asp-items="@Model.Authors" required></select>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Categories, "Категории")
    <select multiple class="form-control" asp-for="@Model.SelectedCategories" asp-items="@Model.Categories"></select>
</div>

<script>
    $(() => {
        var editor = new EditorConfig();
        @if (Model is PageViewModel)
        {
            @:editor.initArea('static-pages');
            @:editor.initArea('static-pages', '#excerpt-textarea');
        }
        else
        {
            @:editor.initArea('news');
            @:editor.initArea('news', '#excerpt-textarea');
        }
    });
</script>