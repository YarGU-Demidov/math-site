        <div class="page__head">
            <div class="page__title section-head">
                <h1 class="section-head__title heading">
                    @Model.Title
                </h1>
            </div>
        </div>
        <div class="page__main">
            <div class="page__body">
                <div class="wysiwyg">
                    @Html.Raw(Model.Content)
                </div>
            </div>
            <div class="page__sidebar">
                <div class="page__aside-section">
                    <img class="featured-image" src="@image" srcset="@image2x 2x" alt="@Model.Title">
