@model NewsItemViewModel
@{
    Layout = "SecondaryLayout";

    var image = Model.PreviewImageId != null
        ? Url.Action("Get", "File", new { id = Model.PreviewImageId })
        : "images/default_post_preview@2x.png";
    var image2x = Model.PreviewImage2XId != null
        ? Url.Action("Get", "File", new { id = Model.PreviewImageId })
        : image;
}

<div class="preview">
    <div class="preview__background">
        <div class="preview__inner">
            <div class="preview__image" src="images/space.jpg" width="1920" height="305"></div>
        </div>
    </div>
    <div class="preview__content">
        <div class="preview__wrap container">
            <div class="preview__title section-head">
                <h1 class="section-head__title heading heading_inverted heading_preview">
                    @Model.Title
                </h1>
            </div>
        </div>
    </div>
</div>

<div class="page">
